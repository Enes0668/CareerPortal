@model KariyerPortali.Models.ProfileViewModel

@{
    ViewData["Title"] = "Profilimi Düzenle";
}

<div class="d-flex justify-content-center align-items-center mt-5 mb-5">
    <div class="card shadow-lg w-100" style="max-width: 600px; border-radius: 1rem;">
        <div class="card-header bg-primary text-white text-center" style="border-top-left-radius: 1rem; border-top-right-radius: 1rem;">
            <h4 class="mb-0">Profilimi Düzenle</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label fw-bold">Ad Soyad</label>
                    <input asp-for="FullName" class="form-control" placeholder="Adınızı ve Soyadınızı girin" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Email</label>
                    <input asp-for="Email" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Konum</label>
                    <input asp-for="Location" class="form-control" placeholder="Örn: Ankara, Türkiye" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Hakkında (Bio)</label>
                    <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Kendinizi kısaca tanıtın..."></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Profil Fotoğrafı</label>
                    <input asp-for="ProfileImage" type="file" class="form-control" />
                    @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
                    {
                        <div class="text-center">
                            <img src="@Model.ExistingImageUrl" class="img-thumbnail mt-3"
                                 style="width:120px; height:120px; object-fit:cover; border-radius:50%;" />
                        </div>
                    }
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
