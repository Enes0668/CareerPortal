@model IEnumerable<KariyerPortali.Models.Application>

@if (!Model.Any())
{
    <p>Bu ilana henüz başvuru yapılmamış.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ad Soyad</th>
                <th>Email</th>
                <th>Başvuru Tarihi</th>
                <th>CV</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model)
            {
                <tr>
                    <td>@app.User.FullName</td> <!-- ApplicationUser'da FullName varsa -->
                    <td>@app.User.Email</td>
                    <td>@app.AppliedDate.ToShortDateString()</td>
                    <td>
                        <a href="@app.CvFilePath" target="_blank" class="btn btn-sm btn-info">
                            CV'yi Göster
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

