<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KariyerPortalı</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KariyerPortalı.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Kariyer Portalı</a>
                <form class="d-flex ms-3" asp-controller="JobPosting" asp-action="Index" method="get">
                    <input class="form-control me-2" type="search" placeholder="İş ara..." name="query" value="@Context.Request.Query["query"]">
                    <button class="btn btn-outline-light" type="submit">Ara</button>
                </form>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Employer"))
                            {
                                <li class="nav-item d-flex align-items-center">
                                    <a class="nav-link btn btn-outline-light ms-2" asp-controller="JobPosting" asp-action="Create"
                                       style="color: #fff; background-color: transparent; border-color: #fff;"
                                       onmouseover="this.style.backgroundColor='#fff'; this.style.color='#000';"
                                       onmouseout="this.style.backgroundColor='transparent'; this.style.color='#fff';">
                                        İlan Oluştur
                                    </a>
                                </li>
                            }
                            <li class="nav-item d-flex align-items-center">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door-fill"></i> Ana Sayfa
                                </a>
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                <a class="nav-link" asp-controller="Profile" asp-action="Index">
                                    <i class="bi bi-person-circle"></i> Profilim
                                </a>
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                <span class="navbar-text text-white me-3">Hoş geldin, @User.Identity.Name</span>
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-light btn-sm">Çıkış Yap</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <div class="container mt-3">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>

        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
