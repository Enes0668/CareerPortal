@model KariyerPortalı.Models.ProfileViewModel

<div class="d-flex justify-content-center align-items-center mt-5">
    <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%; border-radius: 1rem;">
        <div class="text-center">
            @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
            {
                <img src="@Model.ExistingImageUrl"
                     class="rounded-circle mb-3"
                     style="width:150px; height:150px; object-fit:cover; border:4px solid #f1f1f1;" />
            }
            else
            {
                <div class="rounded-circle mb-3 d-flex justify-content-center align-items-center bg-light"
                     style="width:150px; height:150px; border:4px solid #f1f1f1; font-size:48px; color:#aaa;">
                    <i class="bi bi-person"></i>
                </div>
            }
            <h3 class="mb-1">@Model.FullName</h3>
            <p class="text-muted">@Model.Email</p>
        </div>

        <hr />

        <div>
            <p><i class="bi bi-geo-alt-fill text-primary"></i> <strong>Konum:</strong> @Model.Location</p>
            <p><i class="bi bi-info-circle text-success"></i> <strong>Hakkında:</strong> @Model.Bio</p>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Edit" class="btn btn-primary px-4">Profili Düzenle</a>
        </div>
    </div>
</div>
