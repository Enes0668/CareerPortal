@model IEnumerable<KariyerPortalı.Models.Application>

<div class="list-group">
    @if (!Model.Any())
    {
        <p class="text-muted">Henüz başvuru yok.</p>
    }
    else
    {
        @foreach (var app in Model)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <span>@app.User.UserName</span>
                <span class="text-muted">@app.AppliedDate.ToShortDateString()</span>
            </div>
        }
    }
</div>
