@{
    ViewData["Title"] = "Şifre Sıfırlandı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow text-center">
                <div class="card-header bg-success text-white">
                    <h3>Şifre Başarıyla Sıfırlandı!</h3>
                </div>
                <div class="card-body">
                    <p>Artık yeni şifrenizle giriş yapabilirsiniz.</p>
                    <i class="bi bi-check-circle-fill" style="font-size: 3rem; color: #198754;"></i>
                </div>
                <div class="card-footer">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-success w-100">Giriş Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>
