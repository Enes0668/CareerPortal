@{
    ViewData["Title"] = "Email Gönderildi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow text-center">
                <div class="card-header bg-info text-white">
                    <h3>Şifre Sıfırlama Email’i Gönderildi</h3>
                </div>
                <div class="card-body">
                    <p>Lütfen email adresinizi kontrol edin ve gelen linke tıklayarak şifrenizi sıfırlayın.</p>
                    <i class="bi bi-envelope-fill" style="font-size: 3rem; color: #0dcaf0;"></i>
                </div>
                <div class="card-footer">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-info w-100">Giriş Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>
